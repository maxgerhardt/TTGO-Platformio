{
    "version": "2.0.0",
    "command": "bash",
    "args": [
        "-c"
    ],
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "build app",
            "type": "shell",
            "args": [
                "-c",
                "./BUILD all"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "build app -j8",
            "type": "shell",
            "args": [
                "-c",
                "./BUILD -j8 all"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build"
        },
        {
            "label": "clean app",
            "type": "shell",
            "args": [
                "-c",
                "./BUILD clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "flash app",
            "type": "shell",
            "args": [
                "-c",
                "make app-flash"
            ],
            "problemMatcher": []
        },
        {
            "label": "monitor",
            "type": "shell",
            "command": "gnome-terminal",
            "args": [
                "-e",
                "make monitor"
            ],
            "problemMatcher": []
        },
        {
            "label": "menuconfig",
            "type": "shell",
            "command": "gnome-terminal",
            "args": [
                "-e",
                "make menuconfig"
            ],
            "problemMatcher": []
        }
    ]
}